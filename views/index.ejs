<% layout('layout') %>
<div class="upload-block ">
    <% if (typeof success != 'undefined') { %>
        <% if(success == 'true') {%>
        <div class="alert alert-success">
            Файл успешно загружен
        </div>
        <% } else { %>
            <div class="alert alert-danger">
                <%= message %>
            </div>
        <% } %>
    <% } %>

    <form action="/backend/upload" method="POST" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4 col-picture">
                <div class="fileinput fileinput-new" data-provides="fileinput">
                    <div>
                        <span class="btn btn-default btn-file">
                            <span class="fileinput-new">
                                Выбрать изображение
                            </span>
                            <span class="fileinput-exists">
                                Изменить
                            </span>
                           <input type="file" name="image">
                        </span>
                        <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">
                            Удалить
                        </a>
                    </div>
                    <div class="fileinput-preview thumbnail" data-trigger="fileinput"
                         style="width: 200px; height: 150px;">
                    </div>
                </div>
            </div>
            <div class="col-md-8 col-comment">
                <label for="comment">Ваш комментарий:</label>
                <textarea class="form-control comment-input" id="comment" name="comment"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-6 col-submit">
                <input type="submit" class="btn btn-default" value="Загрузить">
            </div>
        </div>

    </form>
</div>
